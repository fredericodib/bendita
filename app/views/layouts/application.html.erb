<!DOCTYPE html>
<html>
  <head>
    <title>Bendita</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'notify.min', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
	<script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
  </head>

  <body class="fixed-nav sticky-footer bg-dark" id="page-top">
	  <%= render "layouts/navbar" %>

	  <div class="content-wrapper">
	    <div class="container-fluid">
	      
	      <div class="row">
	        <div class="col-12">
	        	<%= yield %>
	        </div>
	      </div>
	    </div>
	    
	    <!-- /.footer-->
	    <footer class="sticky-footer">
	      <div class="container">
	        <div class="text-center">
	          <small>Copyright © Bendita Gravadora 2018</small>
	        </div>
	      </div>
	    </footer>

	    <!-- Scroll to Top Button-->
	    <a class="scroll-to-top rounded" href="#page-top">
	      <i class="fa fa-angle-up"></i>
	    </a>

	    <!-- Logout Modal-->
	    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	      <div class="modal-dialog" role="document">
	        <div class="modal-content">
	          <div class="modal-header">
	            <h5 class="modal-title" id="exampleModalLabel">Pronto para Sair?</h5>
	            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
	              <span aria-hidden="true">×</span>
	            </button>
	          </div>
	          <div class="modal-body">Clique "Logout" se você deseja encerrar a sessão.</div>
	          <div class="modal-footer">
	            <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
	            <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "btn btn-primary") %>
	          </div>
	        </div>
	      </div>
	    </div>
	  </div>
	  
  </body>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <% if alert %>
    <script>
      $.notify("<%= alert %>", "error");
    </script>
  <% end %>
  <% if notice %>
    <script>
      $.notify("<%= notice %>", "success");
    </script>
  <% end %>

</html>
